mixin singlePost
	section.single-post
		.container
			.post__contant
				.post__contant-right
					.post-brcrumbs
						.post-brcrumbs__pic
							img.post-brcrumbs__img(src="../../assets/images/Files.png")
						.post-brcrumbs__title Article
						.blog__card-stamp 
						.post-brcrumbs__course HR & Recruting
					.post__title.title HR statistics: job search,  interviews, hiring and recruiting
					.post-head__wrap
						.blog__date-time
							.blog__card-date August 3, 2020
							.blog__card-time 4 min read
						.blog__social
							.blog__share Share:
							.blog__icons
								.blog__icons-facebook
								.blog__icons-telegram
								.blog__icons-instagram
					.post-pic
					.post-descr__title= descriptionTitle
					.post-descr= postDescriptionOne
					br
					.post-descr= postDescriptionTwo
					.post-quote
						.post-quote__pic
						.post-quote__text= quote
					.post-descr= postDescriptionThree
					ul.post__list
						each item in postList
							li.post__item= item
					.post-descr__four= postDescriptionFour
					.post-tags__wrap
						ul.post__tags-list
							.post-tags__title Tags:
							each item, index in tagsList
								if index >= 3
									li.post__tags-item= item
						.blog__social
							.blog__share Share:
							.blog__icons
								.blog__icons-facebook
								.blog__icons-telegram
								.blog__icons-instagram
				.post__sidebar
					form.post-form__search(action="")
						input.post-form__inp(type="text" placeholder="Search course...")
						button.post-form__search-img(type="submit")
					.post__author-title Author
					.post__author-wrap
						.post__author-pic
							img.post__author-img(src=require("../../assets/images/author-image.png"), alt="author-image")
						.post__auhor-content
							.post__author-name Kristin Watson
							.post__author-post Curator of Marketing Course
							.blog__icons
								.blog__icons-facebook
								.blog__icons-telegram
								.blog__icons-instagram
					.post__trand-title Trending Articles
					.post__trand-wrap
						each trandItem in tranding
							.post__trand-card
								.post__trand-pic
									img.post__trand-img(src=require(`../../assets/images/${trandItem.img}`), alt="author-image")
								.post__trand-content
									.blog__card-date.post__card-date= trandItem.date
									.post__trand-descr= trandItem.title
					.post__tags-title Tags
					.post-tags__wrap
						ul.post__tags-list
							each item, index in tagsList
								li.post__tags-item= item						