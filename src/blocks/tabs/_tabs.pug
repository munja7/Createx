mixin tab(tabs= [], tabPage= '')
    if tabPage === 'home-tabs'
        .tab__layout
            each item, index in tabs
                input(name="nav" class=`${index}-radio` type="radio" id=`${index}` checked=index == 0 )
                .tab__page(class=`${index}-page`)
                    .tab__page-contents
                        .tab__content
                            .tab__content-left
                                .tab__content-title= item.title
                                .tab__content-text= item.descr
                            .tab__content-pic
                label.tab__nav(for=`${index}`)
                    img.tab__pic(src=require(`../../assets/images/${item.nameImg}`))
                    span.tab__nav-text= item.name
    else if tabPage === 'blog-tabs'
        .blog-tab__layout
            each item, index in tabs
                input(name="nav" class=`${index}-radio` type="radio" id=`${index}` checked=index == 0 )
                .blog-tab__page(class=`${index}-page`)
                    .blog-tab__page-contents
                        .blog-tab__content
                            +blogCards(cardsBlog)
                label.blog-tab__nav(for=`${index}`)
                    if index != 0
                        img.blog-tab__pic(src=require(`../../assets/images/${item.nameImg}`))
                    span.blog-tab__nav-text= item.name
            form.blog-tab__search(action="", method="")
                .blog-tab__category Blog category
                select.blog-tab__cat-select(name="category")
                    option.blog-tab__cat-option(value="all themes", selected) all themes
                    option.blog-tab__cat-option(value="all themes", selected) Marketing
                    option.blog-tab__cat-option(value="all themes", selected) Development
                    option.blog-tab__cat-option(value="all themes", selected) Design
                input.blog-tab__inp(type="text" placeholder="Search blog...")
                button.blog-tab__search-img(type="submit")
    else
        .courses-tab__layout
            each item, index in tabs
                input(name="nav" class=`${index}-radio` type="radio" id=`${index}` checked=index == 0 )
                .courses-tab__page(class=`${index}-page`)
                    .courses-tab__page-contents
                        .courses-tab__content
                            .online-courses__cards
                                each card in onlineCoursesCards
                                    .online-courses__card-wrap
                                        +card(
                                            card.bageColor, 
                                            card.img, card.bageText, 
                                            card.title, card.price, 
                                            card.name, 
                                            'online-courses__card', 
                                            'online-courses__card-pic')
                label.courses-tab__nav(for=`${index}`)
                    span.courses-tab__nav-text= item.name
                        span.courses-tab__nav-num
                            sup= item.num
            form.online-courses__search(action="")
                input.online-courses__inp(type="text" placeholder="Search course...")
                button.online-courses__search-img(type="submit")